#:kivy 1.11.1

<SudokuCell>:

    canvas.before:
        Color:
            rgba: self.color
        Rectangle:
            size: self.size
            pos: self.pos
        

    cols: 3
    id: possible
    spacing: 0

    on_press: app.manual_entry(self)

    Label:
        id: pos1
        text: ""
        color: [0,0,0,.3]
    
    Label:
        id: pos2
        text: ""
        color: [0,0,0,.3]
    
    Label:
        id: pos3
        text: ""
        color: [0,0,0,.3]
    
    Label:
        id: pos4
        text: ""
        color: [0,0,0,.3]
    
    Label:
        id: pos5
        text: ""
        color: [0,0,0,.3]
    
    Label:
        id: pos6
        text: ""
        color: [0,0,0,.3]

    Label:
        id: pos7
        text: ""
        color: [0,0,0,.3]

    Label:
        id: pos8
        text: ""
        color: [0,0,0,.3]

    Label:
        id: pos9
        text: ""
        color: [0,0,0,.3]

        
<SudokuGrid>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
    
    spacing: 6
    cols: 3
    rows: 3

<QuadrantGrid>:
    spacing: 3
    cols: 3
    rows: 3


<ManualInput>:

    orientation: 'vertical'
    GridLayout:
        cols: 3

        Button:
            id: sel_1
            text: '1'
            on_press: app.change_entry(self)
        
        Button:
            id: sel_2
            text: '2'
            on_press: app.change_entry(self)

        Button:
            id: sel_3
            text: '3'
            on_press: app.change_entry(self)

        Button:
            id: sel_4
            text: '4'
            on_press: app.change_entry(self)

        Button:
            id: sel_5
            text: '5'
            on_press: app.change_entry(self)

        Button:
            id: sel_6
            text: '6'
            on_press: app.change_entry(self)

        Button:
            id: sel_7
            text: '7'
            on_press: app.change_entry(self)

        Button:
            id: sel_8
            text: '8'
            on_press: app.change_entry(self)

        Button:
            id: sel_9
            text: '9'
            on_press: app.change_entry(self)

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .4
        Button:
            id: pen
            text: 'Pen'
            on_press: app.change_entry_type(self)

        Button:
            id: pencil
            text: 'Pencil'
            on_press: app.change_entry_type(self)